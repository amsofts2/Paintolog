<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Paintolog</title>
    <link rel="icon" type="image/x-icon" sizes="180x180" href="~/img/paintolog-logo.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Paintolog.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&family=Roboto:wght@400;500&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid p-0">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/paintolog-logo.png" alt="Paintolog">
                    <span class="header-title">Paintolog</span>
				</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item mx-4">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-4">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item mx-4">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer py-3 px-3">
        <div class="d-flex justify-content-between align-items-center">
            <div class="footer-left">
                <p class="mb-0">
                    © 2025 Paintolog |
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy Policy</a> |
                    <a asp-area="" asp-controller="Home" asp-action="Conditions" class="text-decoration-none">Terms and Conditions</a>
                </p>
            </div>
            <div class="footer-right">
                <a href="https://play.google.com/" target="_blank" class="text-decoration-none play-store">
                    <img src="/img/google-play-icon.png" alt="Google Play" style="height: 30px;">
                    <span style="margin-right: 10px;color: #6C757D;">Download from Google Play Store</span>
				</a>
                <a href="https://www.apple.com/app-store/" target="_blank" class="text-decoration-none app-store">
                    <img src="/img/app-store-icon.png" alt="App Store" style="height: 30px;">
                    <span style="margin-right: 10px;color: #6C757D;">Download from App Store</span>
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
